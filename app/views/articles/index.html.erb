<h1>Listando todos os artigos</h1>
<p>
<%= link_to "Criar novo artigo", new_article_path %>
</p>
<table>
 <tr>
  <th>Título</th>
  <th>Descrição</th>
 </tr>
 <% @articles.each do |article| %>
 <tr>
  <td><%= article.title %></td>
  <td><%= article.description %></td>
  <td><%= link_to 'Alterar', edit_article_path(article) %></td>
  <td><%= link_to 'Mostrar', article_path(article) %></td>
  <td><%= link_to 'Apagar', article_path(article), method: :delete, data: {confirm: "Você tem certeza que deseja apagar?"} %></td>
 </tr>
 <% end %>
</table>
